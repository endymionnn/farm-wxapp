.weui-cells .headimg {
    width: 50px;
    height: 50px;
    display: block;
    border-radius: 50%;
    overflow: hidden;
}
.weui-cells .nickname{
    font-size: 40rpx;
}
.weui-cells .desc{
    font-size: 24rpx;
    color: #999;
}
.weui-cells:before {
  border-top:none;
}
.weui-cells:after{
    border-bottom: none;
}
.weui-cell {
    padding: 15px;
}
.weui-cell:before {
    margin-left: 30px;
    color: #000;
    border-color: #eee;
}
.weui-cell__hd .iconfont {
    font-size: 42rpx;
    margin-right: 10px;
    color: #00c777;
}

button{
    line-height: 1.4;
    background-color: #fff;
    text-align: left;
}
button::after{
    display: none;
}